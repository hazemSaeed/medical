<div class="container">
  <section id="header1">
    <div class="container-fluid">
       <div class="row text-center">
        <h1 class="text-primary">
          Result Disease Found
        </h1>
        <form class="pure-form" action="/searchDisease" method="GET" style="border-top: 1px solid #eee;border-bottom:1px solid #eee;background:#fafafa;margin:30px 0;padding:20px 10px;text-align:center">
            <div class="form-group text-center">
                  <label for="disease"><h4>Disease Name</h4></label>
                  <input type="text" autofocus class="form-control" name="disease" id="disease" placeholder="find a prescription" title="search for prescription" style="outline:0;width:60%;margin:auto">
              </div>
        </form>
    </div>
    </div>
  </section>
  <br><br>
  <div class="row">
      {{#if diseases}}
      
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-body">
                <h3>Result Diseases</h3>
                {{#each diseases}}
                <a href="javascript:void(0)" id="popupDisease" data-izimodal-open="#modal-disease" onclick="renderDisease({{ID}})" class="btn btn-primary">{{Name}}</a>
                {{/each}}
            </div>
        </div>
    </div>
    
    {{else}}
        <div class="col-md-12 text-center">
            <h3>Result not found</h3>
        </div>
    {{/if}}    
  </div>
</div>
