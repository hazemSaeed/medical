<div id="modal-register" class="modal-custom" data-iziModal-group="grupo2">
        <button data-iziModal-close class="icon-close"><i class="fa fa-close"></i></button>
        <header>
            <h2>SIGN UP</h2>
            {{> home/form-msg}}   
            <div>
                <a href="" id="signin">User</a>
                <a href="" class="active">Doctor</a>
            </div>
        </header>
        <section class="hide">
            <form action="/register-user" method="post">
                <div class="form-group">
                    <label for="usernameU">Username</label>
                    <input id="usernameU" name="usernameU" class="form-control" type="text" placeholder="Enter your Username">
                </div>
                <div class="form-group">
                    <label for="emailU">Email</label>
                    <input id="emailU" name="emailU" class="form-control" type="email" placeholder="Enter your Email">
                </div>
                <div class="form-group">
                    <label for="passwordU">Password</label>
                    <input type="password" name="passwordU" id="passwordU" class="form-control" placeholder="Enter your Password">
                </div>
                <div class="form-group">
                    <label for="cpasswordU">Confirm Password</label>
                    <input type="password" name="cpasswordU" id="cpasswordU" class="form-control" placeholder="Confirm Password">
                </div>
                <div class="form-check">
                    <input id="checkTermU" name="checkTermU" class="form-check-input" type="checkbox">
                    <label for="checkTermU" class="form-check-label"> I agree to the <u>Terms</u></label>
                </div>
                <input type="hidden" name="user" id="user">
                <footer>
                    <button data-iziModal-close>Cancel</button>
                    <button type="submit" class="submit">Sign up</button>            
                </footer>
            </form>
        </section>
        <section>
            <form action="/register-doctor" method="post">
                <div class="form-group">
                    <label for="usernameD">Name Doctor</label>
                    <input id="usernameD" name="usernameD" class="form-control" type="text" placeholder="Enter your Name">
                </div>
                <div class="form-group">
                    <label for="emailD">Email</label>
                    <input id="emailD" name="emailD" class="form-control" type="email" placeholder="Enter your Email">
                </div>
                <div class="form-group">
                    <label for="speciality">Speciality</label>
                    <input id="speciality" name="speciality"  class="form-control" type="text" placeholder="Enter your speciality">
                </div>
                
                <div class="form-group">
                    <label for="passwordD">Password</label>
                    <input type="password" name="passwordD" id="passwordD" class="form-control" placeholder="Enter your Password">
                </div>
                <div class="form-group">
                    <label for="cpasswordD">Confirm Password</label>
                    <input type="password" id="cpasswordD" name="cpasswordD" class="form-control" placeholder="Confirm Password">
                </div>
                <div class="form-check">
                    <input id="checkTermD" name="checkTermD" class="form-check-input" type="checkbox">
                    <label for="checkTermD" class="form-check-label"> I agree to the <u>Terms</u></label>
                </div>
                <input type="hidden" name="doctor" id="doctor">
                <footer>
                    <button data-iziModal-close>Cancel</button>
                    <button type="submit" class="submit">Sign up</button>            
                </footer>
            </form>
        </section>
    </div>